{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gagnant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gagnant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ gagnant.nom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ gagnant.tel }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ gagnant.object }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if gagnant.date %}{{ gagnant.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ gagnant.age }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gagnant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gagnant_edit', { 'id': gagnant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
